{
  "compilerOptions": {
    "target": "es3",
    "module": "commonjs",
    "lib": ["dom", "es2015", "es2016", "es2017", "es2018"],
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": false,
    "downlevelIteration": true,
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  }
}